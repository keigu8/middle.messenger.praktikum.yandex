{{#with pages.chat}}
<div class="chat__root">
    
    <div class="chat__sidebar">
        <div class="chat__header">
        <h1 class="chat__title">{{title}}</h1>
        <a href="/profile.html" class="chat__link">{{profile.title}}</a>
        </div>

        {{> form context='chat' form=search}}

        <div class="chat__previews">
            {{#each chatPreviews}}
            {{> separator }}
            {{> chatPreview }}
            {{/each}}
        </div>
    </div>


</div>
{{/with}}