<form class="{{context}}_form">

  {{#each form}}
    <div class="field">
      <input
        id="{{name}}"
        name="{{name}}"
        type="{{type}}"
        class="field_input"
        placeholder="{{label}}"
      />
      <label for="{{name}}" class="field_label">{{label}}</label>
    </div>
  {{/each}}

  <button type="submit" class="{{context}}_submit">{{submitTitle}}</button>
</form>